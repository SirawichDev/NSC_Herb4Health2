<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_basis_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="#EFEBE9"

    tools:context="com.example.asus.herb4health.BasisData">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--Button1-->
                <Button
                    android:id="@+id/button20"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="#3E2723"
                    android:onClick="GoMain2"
                    android:text="back"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp">

                </Button>
                <!--Button2-->
                <Button
                    android:id="@+id/button21"
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                   android:layout_marginLeft="5dp"
                    android:background="#3E2723"
                    android:text="อวัยวะภายนอก"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp">

                </Button>
                <!--Button3-->
                <Button
                    android:id="@+id/button22"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    android:background="#3E2723"
                    android:text="NEXT"

                    android:textColor="#FFFFFF"
                    android:textSize="25dp">

                </Button>
            </LinearLayout>
            <!--หัว-->
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/bodyman1"
                android:textColor="#FFFFFF"
                android:onClick="GoDisease"
                android:id="@+id/button1">

            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/bodyman2"
                android:textColor="#FFFFFF"
                android:id="@+id/button2">

            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/bodyman3"
                android:textColor="#FFFFFF"
                android:id="@+id/button3">

            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/bodyman4"
                android:textColor="#FFFFFF"
                android:id="@+id/button4">

            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/bodyman5"
                android:textColor="#FFFFFF"
                android:id="@+id/button5">

            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/bodyman6"
                android:textColor="#FFFFFF"
                android:id="@+id/button6">

            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/bodyman7"
                android:textColor="#FFFFFF"
                android:id="@+id/button7">

            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/bodyman8"
                android:textColor="#FFFFFF"
                android:id="@+id/button8">

            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/bodyman9"
                android:textColor="#FFFFFF"
                android:id="@+id/button9">

            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/bodyman10"
                android:textColor="#FFFFFF"
                android:id="@+id/button10">

            </Button>



        </LinearLayout>







    </ScrollView>


</RelativeLayout>
